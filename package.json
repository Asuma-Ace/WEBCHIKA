{
  "name": "scripts_test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile:ejs2html": "ejs-cli -b src/ejs/ \"/**/*.ejs\" -o dist/",
    "watch:ejs2html": "chokidar \"src/ejs/\" \"src/_include/\" -c \"npm run compile:ejs2html\" --initial",
    "start:server": "browser-sync start -s dist -w src/*.html src/assets/css/*.css src/assets/js/*.js",
    "compile:css2cssprefix": "postcss dist/assets/css/style.css -u autoprefixer -o dist/assets/css/style.css",
    "compile:scss2css": "node-sass src/assets/scss/style.scss --importer node_modules/node-sass-globbing/index.js dist/assets/css/style.css --output-style expanded --source-map dist/assets/css/",
    "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
    "watch:scss2cssprefix": "chokidar \"src/assets/scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
    "compile:js": "webpack --mode=production",
    "watch:js": "chokidar \"src/assets/js/**/*\" -c \"npm run compile:js\" --initial",
    "watch:img": "chokidar \"src/assets/img/**/*\" --command \"node imagemin.js\" --initial",
    "delete:dist": "rimraf dist",
    "copy:faviconico": "cpx \"src/favicon.ico\" dist/assets/",
    "prewatch:all": "run-s delete:dist copy:faviconico",
    "watch:all": "run-p watch:ejs2html watch:scss2cssprefix watch:js watch:img start:server",
    "lint:scss": "stylelint \"**/*.scss\"",
    "format:scss": "stylelint --fix \"**/*.scss\"",
    "lint:js": "eslint src/assets/js/**/*.js",
    "format:js": "eslint src/assets/js/**/*.js --fix",
    "format:all": "run-p format:scss format:ts",
    "min:css": "cleancss -o dist/assets/css/style.css dist/assets/css/style.css",
    "min:js": "uglifyjs dist/assets/js/main.js -o dist/assets/js/main.js",
    "delete:map": "rimraf dist/**/*.map",
    "prepare:all": "run-p min:js min:css delete:map"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "chokidar-cli": "^2.1.0",
    "clean-css-cli": "^5.2.2",
    "cpx": "^1.5.0",
    "ejs-cli": "^2.2.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "mkdirp": "^1.0.4",
    "node-sass": "^5.0.0",
    "node-sass-globbing": "0.0.23",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "stylint": "^2.0.0",
    "uglify-es": "^3.3.9",
    "webpack": "^5.31.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "private": true,
  "dependencies": {
    "csv-parse": "^4.15.4"
  }
}
